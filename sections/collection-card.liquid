{{ 'collection-card.css' | asset_url | stylesheet_tag: preload: true }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="master-collection-card">
  <div class="section-{{ section.id }}-padding">
    <div class="{% if section.settings.show_slider %} reduced_page-width{% endif %} page-width team_members">
     {% if section.settings.title != blank %} <div class="top_section">
        <h2 class="second-title">{{ section.settings.title }}</h2>
      {{ section.settings.content }}
      </div>
      {% endif %}
       <div class="section-{{ section.id }} collection_card-section grid-column{% if section.settings.show_slider %} show_card_slider{% endif %}">
          {%- for block in section.blocks -%}
         <div class="collection_card-main">
           <div class="collection_image object-postions{% if section.settings.show_horizontal %} show_horizontal{% endif %}">{% if block.settings.url != blank  %}<a href="{{ block.settings.url }}">{% endif %}<img style="object-position: {{ block.settings.image_position }};" alt="" height="" width="" loading="lazy" src="{{ block.settings.icon | img_url: "500x500" }}">{% if block.settings.url != blank  %}</a>{% endif %}</div>
           <div class="team_info">
          {% if block.settings.caption != blank %}  <span class="caption">{{ block.settings.caption }}</span> {% endif %}
              <h2 class="title">{{ block.settings.heading }}</h2>
               {{ block.settings.content }}
               {% if block.settings.url != blank and block.settings.button != blank  %} <div class="button_shop">
                 <a class="shop_now btn{% if section.settings.transparrent %} transparrent{% endif %}" href="{{ block.settings.url }}">{{ block.settings.button }}</a>
               </div>
             {% endif %}
             </div>
         </div>
        {% endfor %}
        </div>
         
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}.collection_card-section.grid-column {
    grid-template-columns: repeat({{ section.settings.product_column }}, 1fr);
}
  @media only screen and (max-width: 1024px) {
    .section-{{ section.id }}.collection_card-section.grid-column {
     grid-template-columns: 1fr 1fr;
    }
  }
  @media only screen and (max-width: 576px) {
    .collection_card-section.grid-column {
     grid-template-columns: 1fr !important;
    }
  }
  
</style>


{% schema %}
  {
    "name": "Collection Card",
    "settings": [
       {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Meet Our Co-Founders"
    },
      {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Choose us, because you're not only nourishing your body with clean, effective nutrients but also creating aâ€¨healthier lifestyle.</p>"
    },
      {
        "type": "range",
        "id": "product_column",
        "label": "Collection Column",
        "default": 4,
        "min": 2,
        "max": 4,
        "step": 1
    },  
       {
          "type": "checkbox",
          "id": "show_slider",
          "label": "Show Slider On Mobile",
           "default": false
        },
       {
          "type": "checkbox",
          "id": "show_horizontal",
          "label": "Show Horizontal",
           "default": false
        },
      {
          "type": "checkbox",
          "id": "transparrent",
          "label": "Transparrent Button",
           "default": true
        },
      
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding bottom",
      "default": 52
    }
    ],
    "blocks": [
    {
      "type": "card",
      "name": "Card",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Image"
        },
        {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "default": "center",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "bottom", "label": "Bottom" },
        { "value": "center", "label": "Center" },
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
        {
          "type": "inline_richtext",
          "id": "caption",
          "label": "Caption",
          "default": "Slection"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Carry-On"
        },
         {
      "type": "richtext",
      "id": "content",
      "label": "Content"
         },
        {
          "type": "text",
          "id": "button",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Button Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Card"
    }
  ]
  }
{% endschema %}